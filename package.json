{
  "name": "budgetzen-desktop",
  "productName": "Budget Zen",
  "version": "1.2.1",
  "buildHash": "rfydHa5p",
  "description": "Desktop app for Budget Zen",
  "main": ".webpack/main",
  "scripts": {
    "clean": "rm -fr dist out",
    "start": "electron-forge start",
    "package": "electron-forge package --platform=mas",
    "make/mas": "npm run clean && electron-forge make --platform=mas",
    "make/snap": "npm run clean && electron-builder --linux snap",
    "make/win": "npm run clean && electron-builder --win nsis",
    "sign": "electron-osx-sign 'out/Budget Zen-mas-x64/Budget Zen.app' --provisioning-profile='BudgetZen-macOS.provisionprofile' --entitlements='entitlements.plist' --platform=mas --version=10.1.3 --type=distribution",
    "flat": "electron-osx-flat 'out/Budget Zen-mas-x64/Budget Zen.app' --platform=mas",
    "publish": "electron-forge publish",
    "test": "jest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src/ *.js",
    "pretty": "prettier --write '*.{js,jsx,ts,tsx,json,scss}' 'src/**/*.{js,jsx,ts,tsx,json,scss}'",
    "pretty/test": "prettier --check '*.{js,jsx,ts,tsx,json,scss}' 'src/**/*.{js,jsx,ts,tsx,json,scss}'"
  },
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "keywords": [],
  "author": {
    "name": "Bruno Bernardino",
    "email": "me@brunobernardino.com"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "public/icon.icns",
        "platform": "mas",
        "overwrite": true,
        "appBundleId": "com.emotionloop.BudgetsCalm-macOS",
        "appCategoryType": "public.app-category.finance",
        "appCopyright": "Bruno Bernardino",
        "buildVersion": 12
      },
      "makers": [
        {
          "name": "@electron-forge/maker-pkg"
        },
        {
          "name": "@electron-forge/maker-dmg"
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/app.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/out/"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@electron-forge/cli": "6.0.0-beta.54",
    "@electron-forge/maker-dmg": "6.0.0-beta.54",
    "@electron-forge/maker-pkg": "6.0.0-beta.54",
    "@electron-forge/maker-snap": "6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-test-renderer": "17.0.0",
    "@types/styled-components": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "babel-jest": "26.6.3",
    "css-loader": "5.0.1",
    "electron": "10.3.1",
    "electron-builder": "22.9.1",
    "electron-store": "6.0.1",
    "eslint": "7.18.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "fork-ts-checker-webpack-plugin": "6.1.0",
    "jest": "26.6.3",
    "memdown": "5.1.0",
    "moment": "2.29.1",
    "node-loader": "1.0.2",
    "node-sass": "5.0.0",
    "pouchdb-adapter-http": "7.2.2",
    "pouchdb-adapter-idb": "7.2.2",
    "pouchdb-erase": "1.0.2",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-svg-ionicons": "0.2.3",
    "react-test-renderer": "17.0.1",
    "react-toggle-switch": "3.0.4",
    "rodal": "1.8.1",
    "rxdb": "9.6.0",
    "rxjs": "6.6.3",
    "sass-loader": "10.1.1",
    "style-loader": "2.0.0",
    "styled-components": "5.2.1",
    "ts-loader": "8.0.14",
    "typescript": "4.1.3",
    "url-loader": "4.1.1"
  },
  "dependencies": {
    "electron-squirrel-startup": "1.0.0"
  }
}
